{{  header }}{{ column_left }}
<div id="content">
	<div class="page-header">
		<div class="container-fluid">
			<div class="pull-right">
				<a href="{{ back | raw }}" data-toggle="tooltip" class="btn btn-default" title="{{ SaferpayCw_Translate('Back to Transaction') }}"><i class="fa fa-reply"></i></a>
			</div>
			<h1>{{ heading_title }}</h1>
			<ul class="breadcrumb">
  			{%  for breadcrumb in breadcrumbs %}
        		<li><a href="{{ breadcrumb['href'] | raw }}">{{ breadcrumb['text'] }}</a></li>
        	{% endfor %}
      		</ul>
		</div>
	</div>
	<div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger">
			<i class="fa fa-exclamation-circle"></i>{{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
		</div>
   	{%  elseif success %}
     <div class="alert alert-success">
			<i class="fa fa-exclamation-circle"></i>{{ success }}
            <button type="button" class="close" data-dismiss="alert">&times;</button>
		</div>
    {% endif %}
    <div class="panel panel-default">
			<div class="panel-heading">
				<h3 class="panel-title">
					<i class="fa fa-pencil"></i>{{ heading_title }}</h3>
			</div>
			<div class="panel-body">

			<table class="table table-bordered table-hover">
				<tr>
					<td>{{ SaferpayCw_Translate('Capture ID') }}</td>
					<td>{{ capture.getCaptureId() }}</td>
				</tr>

				<tr>
					<td>{{ SaferpayCw_Translate('Capture Date') }}</td>
					<td>{{ capture.getCaptureDate().format(SaferpayCw_DefaultDateTimeFormat()) }}</td>
				</tr>
				<tr>
					<td>{{ SaferpayCw_Translate('Capture Amount') }}</td>
					<td>{{ capture.getAmount() }}</td>
				</tr>
				<tr>
					<td>{{ SaferpayCw_Translate('Status') }}</td>
					<td>{{ capture.getStatus() }}</td>
				</tr>
				{%  for label  in capture.getCaptureLabels() %}
				<tr>
					<td>{{ label['label'] }} 
					{% if label['description'] is defined %} 
						<span class="help">
						{{ label['description'] }}
						</span>
					{% endif %}
					</td>
					<td>{{ label['value'] | escape }}
					</td>
				</tr>
				{% endfor %}
			</table>
			
						
			<h2>{{ SaferpayCw_Translate('Captured Items') }}</h2>
			<table class="table table-bordered table-hover">
				<thead>
					<tr>
						<td>{{ SaferpayCw_Translate('Name') }}</td>
						<td>{{ SaferpayCw_Translate('SKU') }}</td>
						<td>{{ SaferpayCw_Translate('Quantity') }}</td>
						<td>{{ SaferpayCw_Translate('Tax Rate') }}</td>
						<td>{{ SaferpayCw_Translate('Total Amount (excl. Tax)') }}</td>
						<td>{{ SaferpayCw_Translate('Total Amount (incl. Tax)') }}</td>
					</tr>
				</thead>
				<tbody>
					{% for item in capture.getCaptureItems() %}
						<tr>
							<td>{{ item.getName() }}</td>
							<td>{{ item.getSku() }}</td>
							<td>{{ item.getQuantity() }}</td>
							<td>{{ item.getTaxRate() }}</td>
							<td>{{ item.getAmountExcludingTax() }}</td>
							<td>{{ item.getAmountIncludingTax() }}</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
			<br />
			</div>
		</div>
	</div>
</div>

{{ footer }}