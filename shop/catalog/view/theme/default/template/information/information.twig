    {% set class = 'col-sm-9' %}
    {% else %}
    {% set class = 'col-sm-12' %}
    {% endif %}
    <div id="content" class="{{ class }}">{{ content_top }}
      <div class="container">
       <h1>{{ heading_title }}</h1>
       <ul class="breadcrumb">
    {% for breadcrumb in breadcrumbs %}
    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
    {% endfor %}
  </ul>
      {{ description }}
      </div>
      {{ content_bottom }}</div>
    {{ column_right }}</div>
</div>
</div>
</main>
