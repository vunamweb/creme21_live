{{ header }}
<div class="container">
  <ul class="breadcrumb">
   {% for breadcrumb in breadcrumbs %}
    <li><a href="{{ breadcrumb['href'] | raw }}">{{ breadcrumb['text'] }}</a></li>
    {%  endfor %}
  </ul>
  {%  if error_warning %}
  <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i>{{ error_warning }}</div>
  {% endif %}
  <div class="row">{{ column_left }}
    {%  if column_left and column_right %}
    	{%  set class = 'col-sm-6' %}
    {%  elseif column_left or column_right %}
     {%  set class = 'col-sm-9' %}
    {% else %}
    	{% set class = 'col-sm-12' %}
    {% endif %}
    <div id="content" class="{{ class }}">
      <h1>{{ heading_title }}</h1>

			{{ SaferpayCw_IncludeJS('saferpaycw.js') }}
			{{ SaferpayCw_IncludeCss('saferpaycw.css') }}
			{{ checkout_form }}

      {{ content_bottom }}</div>
    {{ column_right }}</div>
</div>
{{ footer }}